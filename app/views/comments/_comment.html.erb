<% @todo.comments.each do |comment| %>
  <div class="allert allert-light">
    <p><strong><%= comment.username %></strong>:<%= comment.body %></p>
  </div>
  <div class="btn-group" role="group" aria-label="comments">
    <span class="me-1 py-1"><%= link_to 'Редактировать', edit_todo_comment_path(@todo, comment),
    :class => 'btn btn-warning' %></span>
    <span class="me-1 py-1"><%= button_to 'Удалить', todo_comment_path(@todo, comment),
    method: :delete, :class => 'btn btn-danger' %></span>
  </div>
<% end %>